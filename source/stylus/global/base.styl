html,
body
  max-width: 100%
  height 100%;

html
  height: 100%
  box-sizing: border-box

  scroll-behavior: smooth
  scrollbar-width: thin

*,
*::before,
*::after
  box-sizing: inherit

body
  position: relative
  display: flex
  flex-direction: column
  width: 100%
  min-width: 320px
  min-height: 100%

  font--default()
  color: $text-color--primary

  background-color: $background-color--primary
  overflow-x: hidden

main
  flex: 1 0 auto

footer
  flex-shrink: 0;

img
  display: block
  max-width: 100%
  height: auto

a
  text-decoration: none

input,
textarea,
select
  border-radius: 0
  appearance: none

svg
  fill: inherit

.no-scroll
  height: 100%

  overflow: hidden

.hidden
  display: none !important
